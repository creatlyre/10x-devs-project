---
import "../styles/global.css";
import SupabaseProvider from "../components/auth/SupabaseProvider.tsx";
const lang = (Astro.locals?.lang as 'pl' | 'en') ?? 'pl';

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <SupabaseProvider client:load>
      <slot />
    </SupabaseProvider>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
